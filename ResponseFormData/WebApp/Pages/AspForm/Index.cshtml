                //console.log(blob);
                newFd.append('binary', blob);

                fetch('@handlerUrl', {
                    method: 'POST',
                    body: newFd
                }).then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.blob();
                }).then(blob => {
                    const img = document.getElementById("IdResponseImg");
                    img.src = URL.createObjectURL(blob);
                }).catch(error => {
                    console.error(error);
                });
            });
