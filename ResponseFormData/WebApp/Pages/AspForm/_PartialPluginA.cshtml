@model APluginForm
@{
}

<div class="my-plugin-a">
    <form onformchange="formChanged" method="post">
        <p>submitボタンの無いform</p>
        <div>
            <label asp-for="@Model.name_SelectedFigureItem"></label>
            <select asp-for="@Model.name_SelectedFigureItem" asp-items="@Model.FigureItems"></select>
        </div>
        <div>
            @foreach (var i in Model.name_YesNoItems)
            {
                <input type="radio" asp-for="@Model.name_YesNoItems" id="@i.id" value="@i.id" />
                <label for="@i.id">@i.caption</label>
                <br />
            }
        </div>
        <div>
            <label asp-for="@Model.name_MyInteger"></label>
            <input type="number" min="1" max="5" asp-for="@Model.name_MyInteger" />
        </div>
        <div>
            <label asp-for="@Model.name_MyDouble"></label>
            <input type="number" min="1.0" max="2.0" step="0.1" asp-for="@Model.name_MyDouble" />
        </div>
    </form>
</div>